<Application x:Class="PingPong.UI.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PingPong.UI.Wpf"
             xmlns:vm="clr-namespace:PingPong.UI.Wpf.ViewModels"
             xmlns:views="clr-namespace:PingPong.UI.Wpf.Views"
             StartupUri="Views/GameView.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:MainViewModel}">
            <views:MainView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:GameViewModel}">
            <views:GameView />
        </DataTemplate>
    </Application.Resources>
</Application>
